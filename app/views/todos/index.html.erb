<div class="media">
	<div class-"media-body">
	<h1 class="media-heading">My To-Do List</h1>
	
	<%= link_to "+", new_todo_path, class: 'addNew' %>
	<%= render partial: 'form', locals: { todo: @todo, user: @user } %>
		<table class="table">
			<thead>
				<th>
					Task
				</th>
				<th>
					Created
				</th>
				<th>
					Complete
				</th>
			</thead>
			<tbody class="js-todos">
				<%= render partial: 'todos/todo', collection: @todos %>
			</tbody>
		</table>
	</div>
</div>