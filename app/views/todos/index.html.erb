<div class="media">
	<div class-"media-body">
	<h1 class="media-heading">My To-Do List</h1>
	<%= link_to "Add New Todo", new_todo_path %>
		<table class="table">
			<thead>
				<th>
					Task
				</th>
				<th>
					Completed
				</th>
				<th>
					Created
				</th>
			</thead>
			<tbody>
				<% @todos.each do |todo| %>
				<tr>
					<td>
						<%= todo.description %>
					</td>
					<td>
						<%= todo.completed %>
					</td>
					<td>
						<%= "#{time_ago_in_words(todo.created_at)} ago" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>