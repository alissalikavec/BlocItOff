<div class="media">
	<div class-"media-body">
	<h1 class="media-heading">My To-Do List</h1>
	
	<%= link_to "+", new_todo_path, class: 'addNew' %>
		<table class="table">
			<thead>
				<th>
					Task
				</th>
				<th>
					Created
				</th>
				<th>
					Complete
				</th>
			</thead>
			<tbody>
				<% @todos.each do |todo| %>
				<tr>
					<td>
						<%= todo.description %>
					</td>
					<td>
						<%= "#{time_ago_in_words(todo.created_at)} ago" %>
					</td>
					<td>
						<!--<%= todo.completed %>-->
						<% if todo.completed %>
						Completed
						<% else %>
						Click to complete
						<%end%>
						Delete
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>